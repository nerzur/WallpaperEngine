                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                </rowConstraints>
                <Label styleClass="table-cell-success" wrapText="true" alignment="CENTER_RIGHT" text="ID: " />
                <Label fx:id="id" maxWidth="Infinity" alignment="TOP_LEFT" text="Label" GridPane.columnIndex="1" />

                <Label styleClass="table-cell-success" wrapText="true" alignment="CENTER_RIGHT" text="Created at: " GridPane.rowIndex="1" />
                <Label fx:id="createdAt" maxWidth="Infinity" wrapText="true" text="Label" GridPane.columnIndex="1" GridPane.rowIndex="1" />

