                <Label fx:id="description" maxWidth="Infinity" wrapText="true" text="Label" GridPane.columnIndex="1" GridPane.rowIndex="4" />

                <Label styleClass="table-cell-success" wrapText="true" alignment="CENTER_RIGHT" text="Categories: " GridPane.rowIndex="5" />
                <HBox fx:id="categories" maxWidth="Infinity" spacing="5" />
            </GridPane>
        </VBox>
        <styleClass>
            <String fx:value="card" />
            <String fx:value="card-primary" />
        </styleClass>
    </VBox>

    <Button fx:id="downloadButton" mnemonicParsing="false" onAction="#onDownloadButtonClick" styleClass="btn-primary" text="Update Wallpaper" textAlignment="CENTER">
        <font>
            <Font size="18.0" />
        </font>
    </Button>
</VBox>
